<hunspell>
<suppress blankLines="true" comments="true" metadata="true" myBlankLines="true" myComments="true"/>

	<affixFile>
		<settings>
			<languageCode>en_US</languageCode>
			<characterSet>UTF-8</characterSet>
			<flagType>long</flagType>
			<circumfix flag="CF"/>
			<complexPrefixes/>
		</settings>
		
		<affixes>
			<prefix flag="EM" cross="true">
				<rule add="en" where="[^bpfmw]" combineFlags="CF EN"/>
				<rule add="em" where="[bpfmw]" combineFlags="CF EN"/>
			</prefix>
			<prefix flag="FK" cross="true">
				<rule add="freaking-" combineFlags="EM" />
			</prefix>
			<suffix flag="EN" cross="true">
				<rule add="n" where="e" combineFlags="CF"/>
				<rule add="en" where="[^e]" combineFlags="CF"/>
			</suffix>
		</affixes>
	</affixFile>
	
	<tests>
	<good>bold light freaking-bold emfreaking-bolden freaking-light emfreaking-lighten</good>
	<bad></bad>
	</tests>

	<dictionaryFile>
		<words>
			bold/FK
			light/FK
		</words>
	</dictionaryFile>
</hunspell>